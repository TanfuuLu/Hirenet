{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "user-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/User/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/User" },
          { "PathPrefix": "/api/User" }
        ]
      },
      "job-route": {
        "ClusterId": "job-cluster",
        "Match": {
          "Path": "/api/Job/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/Job" },
          { "PathPrefix": "/api/Job" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "d1": { "Address": "https://localhost:7257/" }
        }
      },
      "job-cluster": {
        "Destinations": {
          "d1": { "Address": "https://localhost:7160/" }
        }
      }
    }
  }


}
